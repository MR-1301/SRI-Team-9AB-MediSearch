<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <img src="<%= prescription.imageURL %>" class="card-img-top" alt="">
        </div>
        <div class="card-body">
            <h5 class="card-title">Posted By: <%= userName %></h5>
        </div>
    </div>

    <div class="col-6">
        <div class="mb-3">
            <form action="/shop/prescription/<%= prescription._id %>" method="POST" class="mb-3">
                <label class="form-label" for="body">Review Text</label>
                <textarea
                        class="form-control"
                        name="content"
                        id="body"
                        cols="30"
                        rows="3"
                ></textarea>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
        <% for(let i = 0;i < prescription.comments.length;i++) { %>
            <div class="card mb-3 ">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2"><%= shopName[i] %></h6>
                    <p class="card-text">Review: <%= prescription.comments[i].text %></p>
                </div>
            </div>
        <% } %>
    </div>
</div>