<div class="container">
    <button class="btn btn-success"><a href="/">Go Back</a></button>
    <div class="box-nav d-flex justify-between mb-3">
        <a href="/shop/stock/new" class="border-shadow ">
            <span class=" text-gradient">Add Data <i class="fas fa-plus-square"></i> </span>
        </a>
    </div>

    <form action="/" method="POST">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th>Med-Name</th>
                <th>Quantity</th>
                <th>Cost</th>
                <th>Company - mg</th>
                <th>Update/Delete</th>
            </tr>
            </thead>
            <tbody>

            <% if (meds){ %>
                <%for(let med of meds) {%>
                    <tr>
                        <td><%= med.name %></td>
                        <td><%= med.quantity %></td>
                        <td><%= med.price %></td>
                        <td><%= med.description.company %> - <%= med.description.mg %></td>
                        <td>
                            <a href="/shop/update/<%= med._id %>" class="btn border-shadow update">
                                <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>

                            </a>
                            <form action="/shop/delete/<%= med._id %>" method="post">
                                <button class="btn border-shadow delete">
                                    <span class="text-gradient"><i class="fas fa-trash-alt"></i></span>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }%>
            <% } %>
            </tbody>
        </table>
    </form>

</div>