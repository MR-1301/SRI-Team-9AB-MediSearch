<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/userReg.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"/>

<div id="login-box">
    <div class="left">
        <h1>Sign up</h1>

        <form action="/user/register" method="post">
            <input type="text" name="username" placeholder="pick a username" required/>
            <input type="text" name="name" placeholder="Full Name" required/>
            <input type="text" name="mobileNo" placeholder="Phone Number1" required/>
            <input type="text" name="email" placeholder="E-mail" required/>
            <input type="text" name="aadharCardNo" placeholder="Aadhar Card Number" required/>
            <input type="password" name="password" placeholder="Password" required/>
            <i class="bi bi-eye-slash" id="togglePassword"></i>
            <input type="submit" name="" value="Sign Me up">
        </form>

    </div>


    <div class="right">
        <form action="/auth/google" method="get">
            <button class="social-signin google">Log in with Google+</button>
        </form>
    </div>
    <div class="or">OR</div>
</div>

<script src="/javascript/login.js"></script>