<% layout('layouts/boilerplate') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<link rel="stylesheet" type="text/css" href="/stylesheets/allMeds.css">
<div class="box">
    <i class="fa fa-search" aria-hidden="true"></i>
    <input type="text" name="" id="myInput" placeholder="Search Medicine Name">
</div>


<table class="table table-dark table-striped mystyle" id="myTable">
    <thead>
    <tr>
        <th scope="col">Qunatity</th>
        <th scope="col">Medicine Name</th>
        <th scope="col">Shop Name</th>
    </tr>
    </thead>
    <tbody>

    <% for(let med of allMedicines){ %>
        <tr class="no-link" onclick="window.location='/user/viewShop/<%= med.shopId %>';">
            <th scope="row"><%= med.medicineQuantity %></th>
            <td><%= med.medicineName %></td>
            <td><%= med.shopName %></td>
        </tr>
    <% } %>
    </tbody>
</table>

<script src="/javascript/allMeds.js"></script>