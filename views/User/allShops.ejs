<% layout('layouts/boilerplate') %>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<link rel="stylesheet" type="text/css" href="/stylesheets/allShops.css">
<div class="box">
    <i class="fa fa-search" aria-hidden="true"></i>
    <input type="text" name="" id="myInput" placeholder="Search Shop Name">
</div>



<table class="table table-dark table-striped mystyle" id="myTable">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Shop Name</th>
        <th scope="col">Address</th>
        <th scope="col">Phone Number</th>
    </tr>
    </thead>
    <tbody>

    <% for(let i = 0;i < shops.length;i++) { %>
        <tr class="no-link" onclick="window.location='/user/viewShop/<%= shops[i]._id %>';">
            <th scope="row"><%= i + 1 %></th>
            <td><%= shops[i].name %></td>
            <td><%= shops[i].address %></td>
            <td><%= shops[i].shopPhoneNumber %></td>
        </tr>
    <% } %>
    </tbody>
</table>

<script src="/javascript/allShops.js"></script>