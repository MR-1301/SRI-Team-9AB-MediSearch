<% layout('layouts/boilerplate') %>

<button class="btn btn-success"><a href="/user/newPres">Upload Prescription</a></button>

<% for(let i = prescriptions.length-1;i >= 0;i--) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img
                        class="img-fluid"
                        src="<%= prescriptions[i].imageURL %>"
                        alt="No Image Uploded"
                />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <p class="card-text">Total Comments: <%= prescriptions[i].comments.length %></p>
                    <a class="btn btn-primary" href="/user/prescription/<%= prescriptions[i]._id %>">View</a>
                </div>
            </div>
        </div>
    </div>
<% } %>